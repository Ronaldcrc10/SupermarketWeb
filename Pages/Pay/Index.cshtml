@page
@model SupermarketWeb.Pages.Pay.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h3>Index</h3>
<hr/>
<p>
    <a asp-page="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PayMode[0].PayModeName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PayMode[0].Description)
            </th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
@if(Model.PayMode !=null && Model.PayMode.Any())
        {
            @foreach (var item in Model.PayMode)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.PayModeName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>  
        }
        
}
        else
        {
                <tr>
                    <td colspan="4" class="text-center">
                        Paymode not avaible.
                    </td>
                </tr>
        }
    </tbody>
</table>
