@page
@model SupermarketWeb.Pages.Categories.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h3>Index</h3>
<hr />
<p>
    <a asp-page="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Category[0].CategoryName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category[0].Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Category !=null && Model.Category.Any())
        {
            @foreach (var item in Model.Category)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.CategoryName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }

        }
        else
        {
            <tr>
                    <td colspan="4" class="text-center">
                        Category not avaible.
                    </td>
            </tr>
        }
    </tbody>
</table>
